<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".facturacion"
        android:background="@color/celeste" app:layoutDescription="@xml/activity_facturacion_scene">


  <ImageView
      android:id="@+id/imgFotoPerfilUsuario"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="48dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="ImageContrastCheck"
      tools:srcCompat="@tools:sample/avatars"
      android:contentDescription="@string/todo333" />

  <TextView
      android:id="@+id/txtTelefonoFacturacion"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="232dp"
      android:layout_marginTop="10dp"
      android:text="@string/_0963067447"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtFechaFacturacion" />

  <TextView
      android:id="@+id/textView11"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="168dp"
      android:layout_marginTop="10dp"
      android:text="@string/correo"
      android:textColor="#000000"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView9" />

  <TextView
      android:id="@+id/txtUsuarioFacturacion"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="228dp"
      android:layout_marginTop="48dp"
      android:text="@string/super_aaron_viraoccha"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
          android:id="@+id/txtTotalPagar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="228dp"
          android:layout_marginTop="15dp"
          android:text="@string/_220_25"
          android:textColor="#000000"
          app:layout_constraintBottom_toTopOf="@+id/btnComprarFacturacion"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/recyclerViewFactura"/>
  <TextView
          android:id="@+id/textView15"
          android:layout_width="33dp"
          android:layout_height="16dp"
          android:layout_marginStart="144dp"
          android:layout_marginTop="15dp"
          android:text="@string/total"
          app:layout_constraintBottom_toTopOf="@+id/btnComprarFacturacion"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/recyclerViewFactura"/>
  <TextView
      android:id="@+id/textView9"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="152dp"
      android:layout_marginTop="10dp"
      android:text="@string/direccion"
      android:textColor="#000000"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView6" />

  <TextView
      android:id="@+id/textView12"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="172dp"
      android:layout_marginTop="10dp"
      android:text="@string/fecha"
      android:textColor="#000000"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView11" />

  <TextView
      android:id="@+id/textView13"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="156dp"
      android:layout_marginTop="10dp"
      android:text="@string/telefono"
      android:textColor="#000000"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView12" />

  <TextView
      android:id="@+id/txtCedulaFacturacion"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="228dp"
      android:layout_marginTop="10dp"
      android:text="@string/_0107952566"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtUsuarioFacturacion" />

  <TextView
      android:id="@+id/textView14"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif"
      android:layout_marginTop="15dp"
      android:text="@string/lista_de_productos_o_servicios_seleccionados"
      android:textColor="#000000"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.496"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView13" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="160dp"
      android:layout_marginTop="48dp"
      android:text="@string/usuario"
      android:textColor="#020202"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="164dp"
      android:layout_marginTop="10dp"
      android:text="@string/cedula"
      android:textColor="#050505"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView4" />

  <TextView
      android:id="@+id/txtCorreoFacturacion"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="228dp"
      android:layout_marginTop="10dp"
      android:text="@string/aaronviracocha7_gmail_com"
      android:textAlignment="center"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtDireccionFacturacion" />

  <TextView
      android:id="@+id/txtDireccionFacturacion"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="228dp"
      android:layout_marginTop="10dp"
      android:text="@string/cdla_camio_ponce"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtCedulaFacturacion" />

  <Button
          android:id="@+id/btnComprarFacturacion"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/comprar"
          android:layout_marginBottom="15dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.487"
          app:layout_constraintStart_toStartOf="parent"/>
  <Button
          android:id="@+id/btnCancelaracturacion2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/cancelar_compra"
          android:layout_marginBottom="15dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.487"
          app:layout_constraintStart_toStartOf="parent"/>
  <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recyclerViewFactura"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:background="@color/blanco_azulado"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="45dp"
          app:layout_constraintBottom_toTopOf="@+id/btnComprarFacturacion"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView14"
          app:layout_constraintVertical_bias="0.618"
          tools:listitem="@layout/item_productos_facturacion"/>

  <TextView
      android:id="@+id/txtFechaFacturacion"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="232dp"
      android:layout_marginTop="10dp"
      android:text="@string/_15_12_2022"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtCorreoFacturacion" />

  <TextView
      android:id="@+id/textView23"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:text="@string/facturacion"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.456"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.motion.widget.MotionLayout>