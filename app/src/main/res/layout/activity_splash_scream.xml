<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashScream" android:background="@color/verde_odiseum">

    <TextView
            android:text="@string/title_splash"
            android:layout_width="363dp"
            android:layout_height="117dp" android:id="@+id/titulo_tienda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold" android:textSize="40sp"
            app:layout_constraintTop_toBottomOf="@+id/logo_tienda" android:layout_marginTop="20dp"
            android:textColor="@color/gris_oscuro" android:fontFamily="@font/allerta"
            android:elevation="200dp" android:textAlignment="center"
            tools:text="Lo que buscas! "/>
    <ImageView
            android:scaleType="centerCrop"
            android:layout_width="388dp"
            android:layout_height="362dp" app:srcCompat="@drawable/logo_2" android:id="@+id/logo_tienda"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="68dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>