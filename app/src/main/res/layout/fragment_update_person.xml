<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:layout_marginTop="0dp"
>

    <ImageView
            android:scaleType="centerCrop"
            android:layout_width="169dp"
            android:layout_height="146dp" app:srcCompat="@drawable/users" android:id="@+id/logo_tienda2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            android:contentDescription="TODO"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="375dp"
            android:layout_height="64dp"
            android:rotationX="2" android:gravity="center" android:background="@color/celeste"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="216dp" android:id="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.444">
        <Button
                android:text="Cancelar"
                android:layout_width="115dp"
                android:layout_height="wrap_content" android:id="@+id/btn_cancelar"
                android:textAllCaps="false" android:background="@color/blaco_arena"
                android:textColor="@color/rojo_eliminar" android:textSize="16sp" android:textStyle="bold"
        />
        <Button
                android:text="Guardar"
                android:layout_width="110dp"
                android:layout_height="wrap_content" android:id="@+id/btn_guardar"
                android:textAllCaps="false" android:background="@color/blaco_arena"
                android:textColor="@color/accentColor" android:textSize="16sp" android:textStyle="bold"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="342dp"
            android:layout_height="300dp"
            android:id="@+id/linearLayout3" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="136dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginTop="50dp"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.526">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="32dp" android:id="@+id/Layout3">
            <TextView
                    android:text="NOMBRE:"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/textView25"
                    android:layout_marginStart="0dp" android:textSize="15sp"
                    android:textStyle="bold"/>
            <TextView
                    android:text="APELLIDO:"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/textView36"
                    android:layout_marginStart="123dp" android:textSize="15sp" android:textColorHint="#050505"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="10dp" android:id="@+id/a3">
            <EditText
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txt_nombre_update" android:minHeight="40dp"
                    android:padding="15dp"
                    android:hint="Nombre" android:textColor="@color/verde_odiseum" android:textSize="15sp"
                    android:textColorHint="@color/gris_hint"
                    android:background="@drawable/brackgraund_txt_register"
                    android:layout_marginStart="0dp"/>
            <EditText
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txt_apellido_update" android:minHeight="40dp"
                    android:padding="15dp" android:hint="Apellido" android:textColor="@color/azul_claro"
                    android:textSize="15sp"
                    android:textColorHint="@color/gris_hint" android:background="@drawable/brackgraund_txt_register"
                    android:layout_marginStart="29dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginTop="10dp">
            <TextView
                    android:text="CEDULA:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp" android:textSize="15sp"/>
            <TextView
                    android:text="@string/gmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp" android:textSize="15sp" android:textAllCaps="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="593dp"
                tools:layout_editor_absoluteX="23dp" android:layout_marginTop="10dp" android:id="@+id/a2">
            <EditText
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/txt_cedula_update"
                    android:padding="15dp"
                    android:focusable="false"
                    android:hint="Cedula"
                    android:textColor="@color/azul_brillante" android:textSize="15sp"
                    android:textColorHint="@color/gris_hint"
                    android:background="@drawable/brackgraund_txt_register"
                    android:layout_marginStart="0dp"/>
            <EditText
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/txt_usuario_update" android:minHeight="48dp"
                    android:padding="15dp" android:hint="Email" android:textColor="@color/azul_claro"
                    android:textSize="15sp"
                    android:textColorHint="@color/gris_hint" android:background="@drawable/brackgraund_txt_register"
                    android:layout_marginStart="29dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:id="@+id/Layout4" android:layout_marginTop="10dp">
            <TextView
                    android:text="CELULAR:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView31"
                    android:layout_marginStart="0dp" android:textSize="15sp"/>
            <TextView
                    android:text="DIRECCION:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView28"
                    android:layout_marginLeft="123dp" android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="10dp" android:id="@+id/a1">
            <EditText
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="date"
                    android:clickable="true"
                    android:maxLines="1"
                    android:minHeight="48dp"
                    android:padding="10dp" android:id="@+id/txt_telefono_update" android:hint="Telefonno"
                    android:textColor="@color/azul_claro" android:textSize="13sp"
                    android:textColorHint="@color/gris_hint"
                    android:background="@drawable/brackgraund_txt_register"
                    android:layout_marginStart="0dp"/>
            <EditText
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtDireccionUpdate" android:minHeight="48dp"
                    android:padding="15dp" android:hint="Direccion" android:textColor="@color/azul_claro"
                    android:textSize="15sp"
                    android:textColorHint="@color/gris_hint" android:background="@drawable/brackgraund_txt_register"
                    android:layout_marginStart="29dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:layout_width="340dp"
            android:text="EDITAR USUARIO"

            android:layout_height="50dp" android:id="@+id/btn_editar"
            android:textAllCaps="false"
            android:textColor="@color/verde_odiseum" android:textSize="16sp" android:textStyle="bold"
            android:background="@color/blaco_arena"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="cerrar sesion"
            android:layout_width="158dp"
            android:layout_height="47dp" android:id="@+id/btn_cerrar_sesion"
            android:textColor="#171515" android:backgroundTint="#00FFFFFF"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="160dp"
            app:layout_constraintHorizontal_bias="0.498"/>


</androidx.constraintlayout.widget.ConstraintLayout>