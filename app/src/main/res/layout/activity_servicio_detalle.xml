<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ServicioDetalle"
                                                   android:background="@drawable/fondo">

    <Button
            android:id="@+id/btnGuardarServicioCarrito"
            android:layout_width="219dp"
            android:layout_height="54dp"
            android:layout_marginTop="676dp"
            android:text="@string/qqqq"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.638"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/imgFotoServicio"
        android:layout_width="189dp"
        android:layout_height="180dp"
        android:layout_marginTop="36dp"
        android:contentDescription="@string/todosss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="330dp"
            android:layout_height="279dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="36dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/btnGuardarServicioCarrito"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgFotoServicio"
            app:layout_constraintVertical_bias="0.514">

        <TextView
                android:id="@+id/textView32"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:foregroundGravity="center_vertical"
                android:gravity="center_vertical"
                android:text="NOMBRE:"
                android:textColorHighlight="#D51919"
                android:textSize="20sp"/>

        <TextView
                android:id="@+id/txtNombre_Servicio"
                android:layout_width="297dp"
                android:layout_height="41dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="@string/textview"
                android:textSize="20sp"/>

        <TextView
                android:id="@+id/textView33"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:text="PRECIO:"
                android:textSize="20sp"/>

        <TextView
                android:id="@+id/txtPrecio_Servicio3"
                android:layout_width="297dp"
                android:layout_height="41dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="@string/textviewasd"
                android:textSize="20sp"/>

        <TextView
                android:id="@+id/textView34"
                android:layout_width="296dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:text="DESCRIPCION:"
                android:textSize="20sp"/>

        <TextView
                android:id="@+id/txtDescripcionServicio3"
                android:layout_width="291dp"
                android:layout_height="51dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:text="@string/textviewasdasd"
                android:textSize="18sp"/>
    </LinearLayout>
    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="69dp"
            android:layout_height="75dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.162"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/compras" android:layout_marginBottom="56dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_empresa_info" app:layout_constraintVertical_bias="0.387"/>
    <TextView
            android:text="Empresa"
            android:textColor="@color/azul_brillante"
            android:layout_width="289dp"
            android:layout_height="28dp" android:id="@+id/txt_empresa_info"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btnGuardarServicioCarrito"
            app:layout_constraintHorizontal_bias="0.361" app:layout_constraintVertical_bias="0.392"
            android:focusable="auto" android:clickable="true" android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>